<form class='{{cssClass}}' autocomplete='off'>
  <!-- Spell Header -->
  <header class="sheet-header">
    <img src="{{item.img}}" title="{{item.name}}" data-edit="img"/>
    <div class="header-fields">
      <h1>
        <input type="text" name="name" value="{{item.name}}" placeholder="Spell Name" required/>
      </h1>
    </div>
  </header>

  <!-- Spell Properties -->
  <section class="grid grid-2col">
    <div class="form-group">
      <label>Skill Quality</label>
      <select name="system.skillQuality">
        <option value="1" {{#if (eq system.skillQuality 1)}}selected{{/if}}>1</option>
        <option value="2" {{#if (eq system.skillQuality 2)}}selected{{/if}}>2</option>
        <option value="3" {{#if (eq system.skillQuality 3)}}selected{{/if}}>3</option>
        <option value="4" {{#if (eq system.skillQuality 4)}}selected{{/if}}>4</option>
        <option value="5" {{#if (eq system.skillQuality 5)}}selected{{/if}}>5</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <label>Casting Time</label>
      <input type="text" name="system.castingTime" value="{{system.castingTime}}"/>
    </div>
    <div class="form-group">
      <label>Range</label>
      <input type="text" name="system.range" value="{{system.range}}"/>
    </div>
    <div class="form-group">
      <label>Targetable</label>
      <select name="system.targetable">
        <option value="V" {{#if (eq system.targetable "V")}}selected{{/if}}>Verbal (V)</option>
        <option value="S" {{#if (eq system.targetable "S")}}selected{{/if}}>Somatic (S)</option>
        <option value="M" {{#if (eq system.targetable "M")}}selected{{/if}}>Material (M)</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <label>Type</label>
      <select name="system.type">
        <option value="Buff" {{#if (eq system.type "Buff")}}selected{{/if}}>Buff</option>
        <option value="Debuff" {{#if (eq system.type "Debuff")}}selected{{/if}}>Debuff</option>
        <option value="Damage" {{#if (eq system.type "Damage")}}selected{{/if}}>Damage</option>
        <option value="Healing" {{#if (eq system.type "Healing")}}selected{{/if}}>Healing</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <label>Spell Damage</label>
      <input type="number" name="system.spellDamage" value="{{system.spellDamage}}" min="0"/>
    </div>
  </section>

  <style>
    .add-effect-container {
      text-align: center; /* Center the image horizontally */
      margin-bottom: 10px; /* Add some space between the image and the save button */
    }
    .clickable-image {
      width: 24px;
      height: 24px;
      cursor: pointer;
      border: none;
      outline: none;
    }

    .clickable-image:hover {
      box-shadow: 0 0 10px red;
      transition: box-shadow 0.3s ease;
    }
  </style>

